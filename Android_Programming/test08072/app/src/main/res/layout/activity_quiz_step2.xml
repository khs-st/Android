<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz_step2">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:text="도깨비방망이는 깹굴9에서 나온다."
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/q2_btn_O"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="112dp"
        android:text="O"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/q2_btn_X"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:text="X"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/q2_btn_O" />

    <Button
        android:id="@+id/q2_btn_next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:text="다음 퀴즈로"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/q2_btn_O"
        app:layout_constraintTop_toBottomOf="@+id/q2_btn_O" />

    <Button
        android:id="@+id/q2_btn_home"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="홈으로"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/q2_btn_X"
        app:layout_constraintTop_toTopOf="@+id/q2_btn_next" />
</androidx.constraintlayout.widget.ConstraintLayout>